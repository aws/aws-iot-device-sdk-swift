{
  "name": "aws-iot-device-sdk-swift",
  "account": "aws",
  "enabled": true,
  "needs_compiler": false,
  "build_steps": [
    "swift --version",
    "swift build -c release"
  ],
  "run_tests": true,
  "test_steps": [
    "crt-ci-prep-xcodebuild",
    "xcode-tests"
  ],
  "hosts": {
    "al2012": {
      "enabled": false
    },
    "alpine": {
      "enabled": false
    },
    "windows": {
      "enabled": false
    }
  },
  "targets": {
    "ios": {
      "!build_steps": [
        "xcodebuild -scheme AwsIotDeviceSdkSwift -destination 'generic/platform=iOS'",
        "cd ServiceClients/AwsIotShadowClient",
        "xcodebuild -scheme IotShadowClient -destination 'generic/platform=iOS'"
      ]
    },
    "tvos": {
      "!build_steps": [
        "xcodebuild -scheme AwsIotDeviceSdkSwift -destination 'generic/platform=tvOS'"
      ]
    },
    "watchos": {
      "!build_steps": [
        "xcodebuild -scheme AwsIotDeviceSdkSwift -destination 'generic/platform=watchOS'"
      ]
    },
    "linux":{
      "!test_steps":[
        "crt-ci-prep",
        "swift test"
      ]
    }
  }
}
